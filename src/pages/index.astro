---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const allTags = [...new Set(posts.flatMap(p => p.data.tags))];
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Raguraman Velu Ramachandran | Applied AI Engineer">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-16 sm:py-20">
    <section class="mb-16">
      <h1 class="text-3xl sm:text-4xl font-bold text-surface-900 mb-4">
        Hey, I'm Raguraman
      </h1>
      <p class="text-lg text-surface-600 leading-relaxed max-w-2xl mb-4">
        I'm an Applied AI Engineer building intelligent systems at the intersection of AI/ML and software engineering. I specialize in designing and deploying production-grade AI solutions â€” from LLM-powered applications and RAG pipelines to scalable ML platforms.
      </p>
      <p class="text-lg text-surface-600 leading-relaxed max-w-2xl">
        Currently, I'm focused on generative AI and multi-agent systems. On this blog, I share practical insights on AI engineering, backend architecture, and the hard-won lessons from shipping ML to production.
      </p>
      <div class="flex gap-4 mt-6">
        <a href="https://www.linkedin.com/in/raguraman-ramachandran/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-surface-500 hover:text-primary-600 transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          <span class="text-sm font-medium">LinkedIn</span>
        </a>

      </div>
    </section>

    {allTags.length > 0 && (
      <section class="mb-12">
        <h2 class="text-sm font-semibold text-surface-400 uppercase tracking-wider mb-4">Topics</h2>
        <div class="flex flex-wrap gap-2">
          {allTags.map(tag => (
            <span class="px-3 py-1 bg-surface-100 text-surface-600 rounded-full text-sm">
              {tag}
            </span>
          ))}
        </div>
      </section>
    )}

    <section>
      <h2 class="text-sm font-semibold text-surface-400 uppercase tracking-wider mb-6">Latest Posts</h2>
      <div class="space-y-6">
        {posts.map((post) => (
          <a href={`${base}blog/${post.id}/`} class="block group">
            <article class="flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-4">
              <time class="text-sm text-surface-400 shrink-0 tabular-nums" datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
              </time>
              <h3 class="text-lg font-medium text-surface-900 group-hover:text-primary-600 transition-colors">
                {post.data.title}
              </h3>
            </article>
          </a>
        ))}
      </div>
    </section>
  </div>
</BaseLayout>
