---
import BaseLayout from '../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL;
---

<BaseLayout title="404 - Page Not Found">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-20 sm:py-32 text-center">
    <p class="text-6xl font-bold text-primary-600 mb-4">404</p>
    <h1 class="text-2xl sm:text-3xl font-bold text-surface-900 mb-4">
      Page Not Found
    </h1>
    <p class="text-surface-500 mb-8 max-w-md mx-auto">
      The page you're looking for doesn't exist or has been moved.
    </p>
    <a href={`${base}`} class="px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium">
      Go Home
    </a>
  </div>
</BaseLayout>
