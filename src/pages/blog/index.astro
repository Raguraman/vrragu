---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Blog | Raguraman Velu Ramachandran" description="Blog posts about AI, ML, and software engineering">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-16 sm:py-20">
    <h1 class="text-3xl sm:text-4xl font-bold text-surface-900 mb-4">Blog</h1>
    <p class="text-surface-500 text-lg mb-12">
      Thoughts on AI, engineering, and building things that matter.
    </p>

    {posts.length === 0 ? (
      <p class="text-surface-500">No posts yet. Check back soon!</p>
    ) : (
      <div class="space-y-8">
        {posts.map((post) => (
          <a href={`${base}blog/${post.id}/`} class="block group">
            <article class="p-6 rounded-xl border border-surface-200 hover:border-primary-300 hover:shadow-lg transition-all">
              <div class="flex items-center gap-3 mb-3">
                <time class="text-sm text-surface-500" datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
                {post.data.tags.length > 0 && (
                  <div class="flex gap-2">
                    {post.data.tags.map((tag: string) => (
                      <span class="px-2 py-0.5 bg-primary-50 text-primary-700 rounded text-xs font-medium">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
              <h2 class="text-xl font-semibold text-surface-900 group-hover:text-primary-600 transition-colors mb-2">
                {post.data.title}
              </h2>
              <p class="text-surface-600">
                {post.data.description}
              </p>
            </article>
          </a>
        ))}
      </div>
    )}
  </div>
</BaseLayout>
